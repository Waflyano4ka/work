@using MVCRegistration.Models
@model User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Edit</title>
</head>
<body>
    <div align="center" style="margin-top: 200px;">
        <form class="card" style="width: 400px; padding: 10px;" method="post">
            <h3 class="fw-bold" style="color: #0d6efd">Изменение</h3>
            <br />
            <div class="mb-3">
                <label style="float: left; margin-left: 5px;" class="form-label">Фамилия:</label>
                <input type="text" name="surname" class="form-control" placeholder="..." value="@Model.Surname">
            </div>
            <div class="mb-3">
                <label style="float: left; margin-left: 5px;" class="form-label">Имя:</label>
                <input type="text" name="name" class="form-control" placeholder="..." value="@Model.Name">
            </div>
            <div class="mb-3">
                <label style="float: left; margin-left: 5px;" class="form-label">Логин:</label>
                <input type="text" name="login" class="form-control" placeholder="..." value="@Model.Login">
            </div>
            <div class="mb-3">
                <label style="float: left; margin-left: 5px;" class="form-label">Пароль</label>
                <input type="text" name="password" class="form-control" placeholder="..." value="@Model.Password">
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</body>
</html>
